---
permalink: /search.json
---
[
  {%- assign items = site.posts | concat: site.pages -%}
  {%- assign items = items | where_exp: "i", "i.tags and i.tags != empty" -%}
  {%- for i in items -%}
    {
      "title": {{ i.title | jsonify }},
      "url": {{ i.url | relative_url | jsonify }},
      "tags": {{ i.tags | join: ', ' | jsonify }},
      "subject": {{ i.subject | default: "" | jsonify }}
    }{% unless forloop.last %},{% endunless %}
  {%- endfor -%}
]

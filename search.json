---
layout: null
permalink: /search.json
---
[
  {% for post in site.posts %}
    {
      "title": "{{ post.title | escape }}",
      "url": "{{ post.url | relative_url }}",
      "tags": "{{ post.tags | join: ', ' | escape }}"
      "subject": "{{ post.subject | join: ', ' | escape }}"      
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
